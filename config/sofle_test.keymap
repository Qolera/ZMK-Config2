#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/mouse.h>

/ {
    keymap {
        compatible = "zmk,keymap";
        
        // Simple single layer - just basic keys + mouse
        default_layer {
            bindings = <
// ┌─────┬─────┬─────┬─────┬─────┬─────┐                         ┌─────┬─────┬─────┬─────┬─────┬─────┐
    &kp Q  &kp W  &kp E  &kp R  &kp T  &kp Y                       &kp U  &kp I  &kp O  &kp P  &kp LBKT &kp RBKT
// ├─────┼─────┼─────┼─────┼─────┼─────┤                         ├─────┼─────┼─────┼─────┼─────┼─────┤
    &kp A  &kp S  &kp D  &kp F  &kp G  &kp H                       &kp J  &kp K  &kp L  &kp SEMI &kp SQT &kp RET
// ├─────┼─────┼─────┼─────┼─────┼─────┼─────┐             ┌─────┼─────┼─────┼─────┼─────┼─────┼─────┤
    &kp Z  &kp X  &kp C  &kp V  &kp B  &kp N  &kp SPACE           &mkp LCLK &kp M &kp COMMA &kp DOT &kp FSLH &kp RSHFT
// └─────┴─────┴─────┼─────┼─────┼─────┼─────┤             ├─────┼─────┼─────┼─────┼─────┴─────┴─────┘
                      &kp LALT &kp LCTRL &kp SPACE &kp SPACE     &mkp RCLK &kp BSPC &kp LGUI &kp RALT
//                   └─────┴─────┴─────┴─────┘             └─────┴─────┴─────┴─────┘
            >;
            
            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN &inc_dec_kp PG_UP PG_DN>;
        };
    };
};